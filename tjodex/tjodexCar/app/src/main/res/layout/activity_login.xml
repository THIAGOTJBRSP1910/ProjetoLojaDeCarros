<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:orientation="vertical"
        android:background="@color/cinza">

    <ImageView
            android:background="@drawable/logo2"
            android:layout_width="407dp"
            android:layout_height="380dp"
            android:id="@+id/logi" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"/>

    <EditText
            android:id="@+id/tlLogintxtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint="@string/login"/>

    <EditText
            android:id="@+id/tlLogintxtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:hint="@string/senha"/>

    <Button
            android:id="@+id/tlLoginBtnLogar"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:text="Entrar"
            android:textSize="17sp"
            android:textColor="@color/branco"
            android:background="@color/preto"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"/>

    <Button
            android:id="@+id/tlLoginBtnCadastrar"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:text="Cadastrar"
            android:textSize="17sp"
            android:textColor="@color/branco"
            android:background="@color/preto"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"/>
</LinearLayout>